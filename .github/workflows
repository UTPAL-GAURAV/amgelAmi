# Name of workflow
name: Angular GitHub CI

# Trigger on push on main branch
on:
  push:
    branches:
      - main

# Run on multiple node versions
jobs:
  ci:
    runs-on: ubuntu-latest

    strategy:
      matrix:
        node-version: [10.x, 12.x]

# Checkout (has nothing to do with my code)
steps:
  - uses:
      actions/checkout@v2

  # Setup Node enveronment
  - name: Use Node.js $
  - uses: actions/setup-node@v1
    with:
      node-version:
        $

  # Use github cache to save node modules
  - name: Cache node modules
    id: cache-nodemodules
    uses: actions/cache@v2
    env:
      cache-name: cache-node-modules
    with:
      # caching node_modules
      path: node_modules # ðŸ‘ˆ path for node_modules folder
      key: ${{ runner.os }}-build-${{ env.cache-name }}-${{ hashFiles('**/package-lock.json') }}
      # ðŸ‘† name of the chache key includes package-lock.json
      restore-keys: |
        ${{ runner.os }}-build-${{ env.cache-name }}-
        ${{ runner.os }}-build-
        ${{ runner.os }}-

  # Install Node package dependencies conditionally
  - name: Install Dependencies
    if:
      steps.cache-nodemodules.outputs.cache-hit != 'true'
      # ðŸ‘† if cache hits the skip this step.
    run: npm ci

  # Building project in production mode
  - name: Build
    run: npm run build -- --prod

  # Linting project
  - name: Lint
    run: npm run lint
